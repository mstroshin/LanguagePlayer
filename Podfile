platform :ios, '13.0'
use_frameworks!

target 'LanguagePlayer' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  inhibit_all_warnings!
  
  # Web server
  pod 'Swifter', '~> 1.4.7'

  # Redux pods
  pod 'ReSwift', '~> 5.0'
  pod 'ReSwiftThunk'

  # Reactive pods
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxKeyboard'

  # Diffing pods
  pod 'DifferenceKit/UIKitExtension'
end
